docker.runOptions= '-u $(id -u):$(id -g)'
docker.enabled = true
process {
    withLabel: 'MULTIQC'
        {container='ewels/multiqc:latest'
        cpus = 2
        memory = '2 GB'
        }
    withLabel:'FASTQC'
        {container='staphb/fastqc:0.11.9'
        cpus = 2
        memory ='2 GB'
    }
}

params {
    projectDir = '.'
    reads = "$projectDir/data/F_{1,2}.fastq"
    min_seq_length = 32
    min_overlap = 21
    mismatch = 1
    no_indels = true
    seqs_to_keep = 'keep_all'
    discard_untrimmed = true
    output_dir = 'results'
    cpus = 2
    memory = 2
    forward_primer = "TGCAGGNTGGCAG"
    reverse_primer = "GACGGTNGGACGT"
}







