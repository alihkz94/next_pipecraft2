docker.runOptions= '-u $(id -u):$(id -g)'
docker.enabled = true
process {
    withLabel: 'MULTIQC'
        {container='ewels/multiqc:latest'
        cpus = 8
        memory = '4 GB'
        }
    withLabel:'FASTQC'
        {container='staphb/fastqc:0.11.9'
        cpus = 8
        memory ='4 GB'
    }
}

params {
    projectDir = '.'
    multiqc = "$projectDir/multiqc"
    reads = "$projectDir/data/*_{1,2}.fq"
    min_seq_length = 32
    min_overlap = 21
    mismatch = 1
    no_indels = true
    seqs_to_keep = 'keep_all'
    discard_untrimmed = true
    output_dir = 'results'
    cpus = 8
    memory = 8
    forward_primer = "TGCAGGNTGGCAG"
    reverse_primer = "GACGGTNGGACGT"
}







